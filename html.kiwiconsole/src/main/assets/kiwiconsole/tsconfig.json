{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "es2015"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "removeComments": true,
      "allowJs": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*",
      "./**/*.ts"
    ],
    "compileOnSave": true
  }