<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:labelFor="@+id/rb_chose"
        android:padding="@dimen/formMargin"
        android:text=""
        android:textColor="@color/defaultTextColor"
        android:textSize="@dimen/H3"
        tools:text="123312312" />

    <ImageView
        android:id="@+id/img_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fieldSetMargin"
        android:visibility="invisible"
        android:src="@drawable/ic_check_circle_green_400_24dp"
        />

</LinearLayout>